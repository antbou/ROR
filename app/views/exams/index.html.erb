<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Exams</h1>
    <%= link_to 'New exam', new_course_exam_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="text-sm font-light table-auto">
            <thead class="border-b font-medium">
              <tr class="text-left">
                <th scope="col" class="px-6 py-4">Name</th>
                <th scope="col" class="px-6 py-4">consideration</th>
                <th scope="col" class="px-6 py-4">Passed on</th>
                <th scope="col" class="px-6 py-4">Teacher</th>
                <th scope="col" class="px-6 py-4">Course</th>
              </tr>
            </thead>
            <tbody id="grade">
              <% @exams.each do |exam| %>
                <%= render exam %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
