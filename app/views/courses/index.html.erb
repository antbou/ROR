<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Courses</h1>
    <%= link_to 'New course', new_course_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="text-sm font-light table-auto">
            <thead class="border-b font-medium">
              <tr class="text-left">
                <th scope="col" class="px-6 py-4">Title</th>
                <th scope="col" class="px-6 py-4">Category</th>
                <th scope="col" class="px-6 py-4">Teachers</th>
                <th scope="col" class="px-6 py-4">Promotions</th>
                <th scope="col" class="px-6 py-4">Description</th>
                <th scope="col" class="px-6 py-4">Date</th>
                <th scope="col" class="px-6 py-4">Slug</th>
              </tr>
            </thead>
            <tbody id="course">
              <% @courses.each do |course| %>
                <%= render course %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
